<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.quxin.freshfun.dao.UserLoginMapper" >
  <resultMap id="BaseResultMap" type="com.quxin.freshfun.model.login.UserLoginPOJO" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
  </resultMap>
  
  <select id="login" parameterType="com.quxin.freshfun.model.login.UserLoginPOJO" resultType="Integer">
  		select count(id) from user_login where user_name = #{userName} and password = #{password}
  </select>
  
</mapper>